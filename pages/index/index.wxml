<view>
  <input type="text" class="header-input" placeholder="AngularJS·MySQL·Java" placeholder-class="header-input-placeholder" bindinput="shuru" />
  <icon wx:if="{{showIcon}}" type="search" class="header-input-icon"></icon>
</view>
<view class="navigator">
<view wx:for="{{iconarr}}" wx:key="*this" class="navigator-item">
<image class="navigator-img" src="{{item.src}}"></image>
{{item.title}}
<view class="navigator-avtive" />
</view>
</view>
<swiper previous-margin="12" next-margin="12" circular="{{true}}" autoplay="{{true}}">
<swiper-item wx:for="{{swiperarr}}" wx:key="*this">
<image class="swiper-image" src="{{item.src}}"></image>
</swiper-item>
</swiper>
<view class="project">
<text class="project-title">
实战推荐
</text>
<text class="project-empty" hidden="{{!(searchlist && searchlist.length==0)}}">无搜索结果</text>
<view class="project-item" wx:for="{{searchlist ? searchlist : projectarr}}" wx:key="*this">
<image class="project-item-pic" src="{{item.src}}"></image>
<view class="project-item-content">
<view class="box-left">
  <view class="project-item-title">
    {{item.title}}
  </view>
  <view class="project-item-tag">
  <text class="project-item-text">{{item.tag}}</text>
  <text style="margin: 0 10rpx;"> · </text>
  <image class="project-item-user" src="../../resources/用户-角色-用户名-单人_jurassic.png"></image>
  <text> {{item.usernum}} </text>
  </view>
</view>
<view class="box-right">
  <text class="project-item-price">{{'￥'+item.price}}</text>
</view>
</view>
</view>
</view>