.tabs{
  display: flex;
  padding: 0 120rpx;
  height: 88rpx;
  /* line-height: 88rpx; */
  box-shadow:0 2px 4px 0 rgba(0,0,0,0.10);
}
.tab{
  flex: 1;
  position: relative;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #71777D;
}
.active{
  color: black;
}
.active-bar{
  position: absolute;
width: 40rpx;
left: 110rpx;
top: 66rpx;
height: 6rpx;
border-radius: 4rpx;
background: #F01414;
}
.time{
  display: flex;
margin: 40rpx auto;
height: 64rpx;
width: 240rpx;
border:1px solid #71777D;
border-radius: 6px;
color: #71777D;
}
.week,.month{
  flex: 1;
  height:54rpx;
  border-radius:6rpx ;
  text-align: center;
  line-height: 54rpx;
  margin: 6rpx;
}
.week{
  flex: 1;
  text-align: center;
}
.month{
  flex: 1;
}
.time-active{
  background: #71777D;
  color: #fff
}
.list{
  margin-top:24rpx;
}
.item{
  margin: 0 48rpx 40rpx 48rpx;
  display: flex;
  /* margin-bottom:40rpx ; */
}
.item-img{
width: 180rpx;
height: 120rpx;
border-radius: 8rpx;
}
.item-title{
  display: table;
  height: 120rpx;
 flex: 1;
  margin-left: 24rpx;
  margin-right: 48rpx;
}
.item-title-inner{
  display: table-cell;
  font-size: 28rpx;
  font-weight: bold;
  color: #2B333B;
  line-height: 40rpx;
  vertical-align: middle;
  word-break: break-all;
}
.item-number{
  position: relative;
  width: 60rpx;
  text-align: center;
}
.item-num{
  position: absolute;
top: 36rpx;
left: 24rpx;
}
.item-numimg{
width: 70rpx;
height:70rpx;
margin-right: 48rpx;
margin-top:30rpx;
}